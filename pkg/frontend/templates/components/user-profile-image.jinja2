<div id="user-profile-image"
     {% if oob %}
       hx-swap-oob="true"
     {% endif %}>
  {% if image %}
    <img class="w-10 h-10 rounded-full object-center object-cover"
         src="/uploads/{{ image }}"
         alt="Rounded avatar"/>
  {% else %}
    <div class="relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600 cursor-pointer hover:dark:bg-gray-500">
      <span class="font-medium text-gray-600 dark:text-gray-300">{{ username | list | first }}</span>
    </div>
  {% endif %}
</div>
